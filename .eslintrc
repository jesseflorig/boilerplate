{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "document": false
  },
  "parser": "babel-eslint",
  "plugins" : [
    "react",
    "prettier"
  ],
  "rules": {
    "quotes": ["error", "double"],
    "prettier/prettier": "error",
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "react/prop-types": ["error", { ignore: ['children'] }],
    "semi": ["error", "never"]
  }
}
